<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        android:id="@id/actionbar"
        layout="@layout/actionbar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_nor"
        android:layout_marginTop="@dimen/margin_nor"
        android:background="@drawable/bg_et_login"
        android:orientation="horizontal"
        android:padding="@dimen/padding_nor">

        <TextView
            style="@style/text_nor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_nor"
            android:layout_marginRight="@dimen/margin_nor"
            android:text="@string/account" />

        <TextView
            style="@style/text_large"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="|" />

        <EditText
            android:id="@id/et_account"
            style="@style/text_nor"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/margin_nor"
            android:background="@color/white"
            android:inputType="number|text"
            android:hint="@string/input_account_hint"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_nor"
        android:layout_marginTop="@dimen/divider"
        android:background="@color/white"
        android:orientation="horizontal"
        android:padding="@dimen/padding_nor">

        <TextView
            style="@style/text_nor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_nor"
            android:layout_marginRight="@dimen/margin_nor"
            android:text="@string/password" />

        <TextView
            style="@style/text_large"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="|" />

        <EditText
            android:id="@id/et_password"
            style="@style/text_nor"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/margin_nor"
            android:background="@color/white"
            android:inputType="textPassword"
            android:hint="@string/input_pwd_hint"
            />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider"
        android:background="@color/gray" />

    <Button
        android:id="@id/btn_login"
        style="@style/text_big"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/margin_long"
        android:layout_marginBottom="@dimen/margin_long"
        android:background="@drawable/bg_green_round"
        android:text="@string/login"
        android:textColor="@color/white" />

    <TextView
        android:id="@id/tv_forget_pwd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/forget_password"
        android:layout_marginTop="@dimen/margin_long"
        android:layout_gravity="center_horizontal"
        />

    <RelativeLayout
        android:layout_width="@dimen/width_long"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_long"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@id/tv_become_businessman"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/become_businessman"
            android:layout_marginTop="@dimen/margin_long"
            />

        <TextView
            android:id="@id/tv_become_provider"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/become_provider"
            android:layout_marginTop="@dimen/margin_long"
            android:layout_centerHorizontal="true"
            />

        <TextView
            android:id="@id/tv_become_deliveryman"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/become_deliveryman"
            android:layout_marginTop="@dimen/margin_long"
            android:layout_alignParentEnd="true"
            />
    </RelativeLayout>

    <ProgressBar
        android:id="@id/progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_nor"
        android:layout_gravity="center_horizontal"
        style="?android:attr/progressBarStyleSmall"
        android:visibility="gone"
        />
</LinearLayout>