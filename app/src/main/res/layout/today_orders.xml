<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:background="#f7844d"
        android:gravity="center"
        android:text="今日订单"
        android:textColor="#ffffff"
        android:textSize="23sp" />
    <ImageView
        android:layout_marginTop="10dp"
        android:layout_marginLeft="12dp"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:src="@drawable/back_1"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="筛选"
        android:layout_marginTop="16dp"
        android:layout_marginRight="15dp"
        android:layout_alignParentRight="true"
        android:textColor="#ffffff"
        android:textSize="23sp"/>
    <EditText
        android:id="@+id/input_order"
        android:layout_width="280dp"
        android:layout_height="40dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="16dp"
        android:background="@drawable/shape"
        android:hint=" 请输入订单号"
        android:layout_below="@id/title"/>
    <ImageView
        android:id="@+id/img1"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:src="@drawable/button"
        android:layout_toRightOf="@id/input_order"
        android:layout_marginTop="40dp"
        />
    <TextView
        android:id="@+id/lin11"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/img1"
        android:background="#e3e3e3" />
    <LinearLayout
        android:id="@+id/ll_7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/lin11"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="外卖订单"
            android:gravity="center"
            android:textSize="20sp"/>
        <TextView
            android:layout_width="1dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:background="#e3e3e3"
            android:layout_weight="0"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:layout_weight="1"
            android:text="订座订单"
            android:textSize="20sp"/>
    </LinearLayout>
    <TextView
        android:id="@+id/lin12"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/ll_7"
        android:background="#e3e3e3" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#ffffff"
        android:orientation="vertical">
        <TextView
            android:id="@+id/lin10"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#e3e3e3" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_weight="1">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="28dp"
                    android:src="@drawable/home1"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="首页"
                    android:textColor="#f7844d"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_weight="1">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="28dp"
                    android:src="@drawable/liexin"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="猎信"
                    android:textColor="#6b6b6b"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_weight="1">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="28dp"
                    android:src="@drawable/paotui"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="跑腿"
                    android:textColor="#6b6b6b"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_weight="1">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="28dp"
                    android:src="@drawable/xitongxiaoxi"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="系统消息"
                    android:textColor="#6b6b6b"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>